{% extends 'SiteBundle::layout.html.twig' %}
{% block title %}Véhicules en vente{% endblock %}
{% block og_title %}Véhicules en vente{% endblock %}
{% block page_style %}
	<link href="{{ asset('bundles/atelierdesportes/global/plugins/fancybox/source/jquery.fancybox.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/atelierdesportes/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.css') }}" rel="stylesheet">
	<link href="{{ asset('bundles/atelierdesportes/global/plugins/uniform/css/uniform.default.css') }}" rel="stylesheet" type="text/css">
	<link href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block content %}
	<ul class="breadcrumb">
		<li><a href="{{path('_home')}}">Accueil</a></li>
		<li class="active">Nos véhicules</li>
	</ul>
	<!-- BEGIN SIDEBAR & CONTENT -->
	<div class="row margin-bottom-40">
		<!-- BEGIN SIDEBAR -->
		{{ include('SiteBundle:Cars:filters.html.twig') }}
		<!-- END SIDEBAR -->

		<!-- BEGIN CONTENT -->
		<div class="col-md-9 col-sm-7">
			<div class="row list-view-sorting clearfix">
				<div class="col-md-2 col-sm-2 list-view">
					<a href="#"><i class="fa fa-th-large"></i></a>
					<a href="#"><i class="fa fa-th-list"></i></a>
				</div>
				{{ include('SiteBundle:Cars:sorts.html.twig') }}
			</div>
			<!-- BEGIN PRODUCT LIST -->
			<div class="row product-list">
				{% for car in cars %}
					<!-- PRODUCT ITEM START -->
					{{ include('SiteBundle:Cars:car_list_item.html.twig') }}
					<!-- PRODUCT ITEM END -->
				{% endfor %}
			</div>
			<!-- END PRODUCT LIST -->
			<!-- BEGIN PAGINATOR -->
			{{ include('SiteBundle:Cars:paginator.html.twig')}}
			<!-- END PAGINATOR -->
		</div>
		<!-- END CONTENT -->
	</div>
	<!-- END SIDEBAR & CONTENT -->
{% endblock %}

{% block page_script %}
    <script src="{{ asset('bundles/atelierdesportes/global/plugins/fancybox/source/jquery.fancybox.pack.js') }}" type="text/javascript"></script><!-- pop up -->
    <script src="{{ asset('bundles/atelierdesportes/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.js') }}" type="text/javascript"></script><!-- slider for products -->
    <script src='{{ asset('bundles/atelierdesportes/global/plugins/zoom/jquery.zoom.min.js') }}' type="text/javascript"></script><!-- product zoom -->
    <script src="{{ asset('bundles/atelierdesportes/global/plugins/bootstrap-touchspin/bootstrap.touchspin.js') }}" type="text/javascript"></script><!-- Quantity -->
    <script src="{{ asset('bundles/atelierdesportes/global/plugins/uniform/jquery.uniform.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/atelierdesportes/global/plugins/rateit/src/jquery.rateit.js') }}" type="text/javascript"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js" type="text/javascript"></script><!-- for slider-range -->

    <script src="{{ asset('bundles/atelierdesportes/layout/scripts/layout.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            Layout.init();    
            Layout.initOWL();
            Layout.initTwitter();
            Layout.initImageZoom();
            Layout.initTouchspin();
            Layout.initUniform();
            Layout.initSliderRange();

            Layout.initFixHeaderWithPreHeader();
            Layout.initNavScrolling();
        });
    </script>
{% endblock %}